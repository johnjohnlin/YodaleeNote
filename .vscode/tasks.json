{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Hugo",
			"type": "shell",
			"command": "hugo serve",
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"severity": "error",
				"fileLocation": "absolute",
				"owner": "hugo",
				"pattern": {
					"regexp": "template: (.*):(\\d+): (.*)",
					"file": 1,
					"location": 2,
					"message": 3,
					"loop": true
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Change detected, rebuilding site",
					"endsPattern": "Total in \\d+ ms"
				}
			}
		},
		{
			"label": "Firebase",
			"type": "shell",
			"command": "hugo && ${HOME}/.node_modules/bin/firebase deploy",
			"group": "build",
			"isBackground": false,
		}
	]
}
